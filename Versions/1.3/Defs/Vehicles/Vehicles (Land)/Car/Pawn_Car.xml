<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleDef ParentName="BaseVehiclePawn">
		<defName>Car</defName>
		<label>Car</label>
		<description>A heavy warship to rule the seas.</description>
		
		<graphicData>
			<texPath>Vehicles/Land/Car/Car</texPath>
			<graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
			<drawSize>(4,7)</drawSize>
			<shaderType>CutoutComplexPattern</shaderType>
			<color>(120, 120, 120)</color>
			<colorTwo>(0, 80, 0)</colorTwo>
			<colorThree>(0, 80, 0)</colorThree>
			<shadowData>
				<volume>(0.4,0.1,0.4)</volume>
			</shadowData>
		</graphicData>
		
		<combatPower>200</combatPower>
		<fillPercent>1</fillPercent>
		
		<nameable>true</nameable>
		<buildDef>Car_Blueprint</buildDef>

		<size>(3,5)</size>
		
		<vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
		<vehicleCategory>Transport</vehicleCategory>
		<techLevel>Industrial</techLevel>
		<vehicleType>Land</vehicleType>
				
		<statBases>
			<Mass>10000</Mass>
			<ArmorRating_Blunt>1.0</ArmorRating_Blunt>
			<ArmorRating_Sharp>1.0</ArmorRating_Sharp>
			<MarketValue>250000</MarketValue>
			<Flammability>0</Flammability>
		</statBases>
		
		<vehicleStats>
			<MoveSpeed>4.5</MoveSpeed>
			<CargoCapacity>250</CargoCapacity>
			<RepairRate>3.25</RepairRate>
		</vehicleStats>
		
		<properties>
			<healthLabel_Healthy>Operational</healthLabel_Healthy>
			<healthLabel_Injured>Needs Repairs</healthLabel_Injured>
			<healthLabel_Immobile>Inoperable</healthLabel_Immobile>
			
			<customBiomeCosts/>
			
			<roles>
				<li>
					<key>driver</key>
					<label>Driver</label>
					<handlingTypes>
						<li>Movement</li>
					</handlingTypes>
					<slots>1</slots>
					<slotsToOperate>1</slotsToOperate>
					<hitbox>
						<cells>
							<li>(-1, 1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>passengerShotgun</key>
					<label>Front Seat</label>
					<slots>1</slots>
					<hitbox>
						<cells>
							<li>(1, 1)</li>
						</cells>
					</hitbox>
				</li>
				<li>
					<key>passengerShotgun</key>
					<label>Passenger</label>
					<slots>3</slots>
					<hitbox>
						<cells>
							<li>(-1, 0)</li>
							<li>(-0, 0)</li>
							<li>(1, 0)</li>
						</cells>
					</hitbox>
				</li>
			</roles>
			
			<customTerrainCosts>
				<li>
					<key>Sand</key>
					<value>250</value>
				</li>
				<li>
					<key>WaterShallow</key>
					<value>-1</value>
				</li>
			</customTerrainCosts>
		</properties>
		
		<components>
			<li>
				<key>Body</key>
				<label>Body</label>
				<health>100</health>
				<armor>.25</armor>
				
				<hitbox>
					<side>Body</side>
				</hitbox>
				
				<categories>
					<li>BodyIntegrity</li>
				</categories>
			</li>
			<li>
				<key>Wheels</key>
				<label>Wheels</label>
				<health>25</health>
				<armor>0</armor>
				
				<hitbox>
					<cells>
						<li>(-1, 1)</li>
						<li>(1, 1)</li>
						<li>(-1, -2)</li>
						<li>(1, -2)</li>
					</cells>
				</hitbox>
			</li>
			<li>
				<key>Engine</key>
				<label>Engine</label>
				<health>100</health>
				<armor>.1</armor>
				<efficiencyWeight>10</efficiencyWeight>
				
				<reactors>
					<li Class = "Vehicles.Reactor_Explosive">
						<indicator>VF_Explosive</indicator>
						<chance>0.25</chance>
						<radius>3</radius>
						<damageDef>Bomb</damageDef>
					</li>
					<li Class = "Vehicles.Reactor_FuelLeak"/>
				</reactors>
				
				<hitbox>
					<cells>
						<li>(0, 2)</li>
					</cells>
				</hitbox>
				<categories>
					<li>MoveSpeed</li>
				</categories>
			</li>
		</components>

		<race>
			<thinkTreeMain>Vehicle</thinkTreeMain>
			<intelligence>ToolUser</intelligence>
			<fleshType>MetalVehicle</fleshType>
			<needsRest>false</needsRest>
			<hasGenders>false</hasGenders>
			<foodType>None</foodType>

			<baseBodySize>1.0</baseBodySize>
			<baseHealthScale>1.0</baseHealthScale>
			
			<soundMeleeHitPawn>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeMiss>
		</race>

		<comps>
			<li Class="Vehicles.CompProperties_FueledTravel">
				<!-- Must Include -->
				<fuelType>Chemfuel</fuelType>
				<fuelConsumptionRate>45</fuelConsumptionRate>
				<fuelCapacity>150</fuelCapacity>
				<fuelConsumptionCondition>Drafted</fuelConsumptionCondition>
			</li>
			<li Class="Vehicles.CompProperties_UpgradeTree">
				<upgrades/>
			</li>
		</comps>
	</Vehicles.VehicleDef>
</Defs>