      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[@Name="ShipBase"]/comps</xpath>
          <value>
            <li Class="Rimefeller.CompProperties_Pipe"/>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>